<% provide :title, 'Login' %>

    <h3 class="font-light mb-8 text-center">Login to <span class="font-semibold">New App</span></h3>

    <% if flash[:notice] %>
      <div class="alert alert-yellow" role="alert">
        <p><%= raw flash[:notice] %></p>
      </div>
    <% end %>

    <%= form_tag sessions_path, class: 'card' do %>

        <div class="form-field">
          <%= label_tag :email, 'Email', class: 'form-label' %>
          <%= text_field_tag :email, nil, class: 'form-text', placeholder: 'Email', tabindex: 1 %>
        </div>

        <div class="form-field">
          <%= label_tag :password, 'Password',  class: 'form-label' %>
          <%= password_field_tag :password, nil, class: 'form-text', autocorrect: 'off', autocapitalize: 'off', spellcheck: 'off', placeholder: 'Password' %>
        </div>

            <%# ---------------- %>
            <style>.whinnie {display: none}</style>
            <div class="whinnie">
              <label>
                Leave this field as it is. Don't change it.
                <%= text_field_tag :whinnie %>
              <label>
              <label>
                Leave this field as it is. Don't change it.
                <%= check_box_tag :piglet, 'piglet', true %>
              <label>
            </div>
            <%# ---------------- %>

        <div class="form-actions form-actions-justify">
          <%= button_tag 'Login', type: 'submit', class: 'btn btn-blue' %>
          <%= link_to new_password_reset_path, class: 'btn-link' do %>
            Forgot password?
          <% end  %>
        </div>

    <% end %>



    <div class="text-center mt-8 mb-8">
      <p class="text-black text-sm mb-2">Don't have an account?</p>
      <div><a href="/register" class="btn-sm btn-blue-outline">Create an account</a></div>
    </div>
