<%= link_to 'New User', new_user_path %>

<table style="margin-top:1em;">
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <%= link_to('Show', user) if policy(user).show? %>
        </td>
        <td><%= link_to('Edit', edit_user_path(user)) if policy(user).update? %></td>
        <td><%= link_to('Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }) if policy(user).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
