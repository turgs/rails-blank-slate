<%= form_with(model: user, local: true, class: 'card') do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= form.label :email, 'Email', class: 'form-label' %>
    <%= form.text_field :email, class: 'form-text' %>
  </div>

  <div class="form-field">
    <%= form.label :password, 'Password', class: 'form-label' %>
    <%= form.text_field :password, class: 'form-text' %>
  </div>

  <div class="form-actions">
    <%= form.submit nil, class: 'btn btn-blue mr-6' %>
    <%= link_to 'Discard', account_path(current_user.account_id), class: 'btn-link' %>
  </div>
<% end %>
