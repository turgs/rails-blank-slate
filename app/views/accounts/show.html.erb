<% provide :title, 'Account' %>

<h1 class="mb-6">Account</h1>
<div>
  <%= @account.name %>
  <span class="pl-3">
    <% if policy(@account).update? %>
      <%= link_to 'Edit', edit_account_path(@account) %>
    <% end %>
    <% if policy(@account).destroy? %>
      &middot; <%= link_to('Close Account', @account, method: :delete, data: { confirm: 'This will immediately delete ALL your data and close your account. Are you sure?' }) %>
    <% end %>
  </span>
</div>


<div class="mt-6">
  <h4>Users</h4>
  <%= render 'users/list' %>
</div>

<hr>

<h3>Stimulus JS Example</h3>

<div data-controller="hello" data-hello-name="Chris">
  <input data-target="hello.name" type="text" data-action="paste->hello#paste">
  <button data-action="click->hello#log">Log</button>
