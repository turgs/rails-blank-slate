<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag    'application',               'data-turbolinks-track': 'reload' %>
  </head>

  <body class="flex bg-grey-lighter justify-center">

    <div class="p-4 px-3 py-10">
      <div class="w-full max-w-xs">
        <h1 class="text-center font-hairline text-blue-darker text-4xl mb-8">Next Visit</h1>
        <%= yield %>
        <p class="text-center text-grey-dark text-xs">
          All rights reserved.
        </p>
      </div>
    </div>
  </body>
</html>
